{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GSX",
  "scopeName": "source.gsx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#package-clause" },
    { "include": "#import-declaration" },
    { "include": "#component-declaration" },
    { "include": "#go-declaration" },
    { "include": "#function-declaration" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.gsx",
          "match": "//.*$"
        },
        {
          "name": "comment.block.gsx",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.gsx" }
          }
        }
      ]
    },
    "package-clause": {
      "name": "meta.package.gsx",
      "match": "^\\s*(package)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.other.package.gsx" },
        "2": { "name": "entity.name.package.gsx" }
      }
    },
    "import-declaration": {
      "patterns": [
        {
          "name": "meta.import.gsx",
          "begin": "^\\s*(import)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "keyword.other.import.gsx" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#import-spec" }
          ]
        },
        {
          "name": "meta.import.gsx",
          "match": "^\\s*(import)\\s+(\"[^\"]*\")",
          "captures": {
            "1": { "name": "keyword.other.import.gsx" },
            "2": { "name": "string.quoted.double.gsx" }
          }
        }
      ]
    },
    "import-spec": {
      "patterns": [
        {
          "match": "\\s*([a-zA-Z_][a-zA-Z0-9_]*)?\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.name.import.gsx" },
            "2": { "name": "string.quoted.double.gsx" }
          }
        }
      ]
    },
    "component-declaration": {
      "patterns": [
        {
          "comment": "Method templ: templ (s *Type) Render() { ... }",
          "name": "meta.component.method.gsx",
          "begin": "^\\s*(templ)\\s+\\(([a-zA-Z_][a-zA-Z0-9_]*)\\s+(\\*?)([a-zA-Z_][a-zA-Z0-9_.]*)\\)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "end": "(?<=\\})",
          "beginCaptures": {
            "1": { "name": "keyword.function.gsx" },
            "2": { "name": "variable.parameter.receiver.gsx" },
            "3": { "name": "keyword.operator.go.gsx" },
            "4": { "name": "entity.name.type.gsx" },
            "5": { "name": "entity.name.function.component.gsx" }
          },
          "patterns": [
            { "include": "#parameter-list" },
            { "include": "#component-body" }
          ]
        },
        {
          "comment": "Function templ: templ Name(params) { ... }",
          "name": "meta.component.gsx",
          "begin": "^\\s*(templ)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "end": "(?<=\\})",
          "beginCaptures": {
            "1": { "name": "keyword.function.gsx" },
            "2": { "name": "entity.name.function.component.gsx" }
          },
          "patterns": [
            { "include": "#parameter-list" },
            { "include": "#component-body" }
          ]
        }
      ]
    },
    "parameter-list": {
      "begin": "(?<=\\()",
      "end": "\\)",
      "patterns": [
        { "include": "#comments" },
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s+([\\[\\]\\*a-zA-Z0-9_.]+)",
          "captures": {
            "1": { "name": "variable.parameter.gsx" },
            "2": { "name": "entity.name.type.gsx" }
          }
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.gsx"
        }
      ]
    },
    "component-body": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.block.begin.gsx" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.block.end.gsx" }
      },
      "patterns": [
        { "include": "#body-contents" }
      ]
    },
    "body-contents": {
      "patterns": [
        { "include": "#comments" },
        { "include": "#state-declaration-line" },
        { "include": "#go-expression-block" },
        { "include": "#control-keywords" },
        { "include": "#component-call" },
        { "include": "#element" }
      ]
    },
    "state-declaration-line": {
      "comment": "State/ref variable declaration at body level: name := tui.NewState(value) or tui.NewRef() etc.",
      "name": "meta.state-declaration.gsx",
      "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:=)\\s*(tui)(\\.)(NewState|NewRef|NewRefList|NewRefMap)\\s*(?:\\[[^\\]]*\\])?\\s*\\(([^)]*)\\)",
      "captures": {
        "1": { "name": "variable.other.state.gsx" },
        "2": { "name": "keyword.operator.go.gsx" },
        "3": { "name": "variable.other.go.gsx" },
        "4": { "name": "punctuation.delimiter.go.gsx" },
        "5": { "name": "entity.name.function.go.gsx" },
        "6": { "name": "meta.embedded.block.go" }
      }
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "meta.control.for.gsx",
          "begin": "(@for)\\s+",
          "end": "(?=\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.control.for.gsx" }
          },
          "patterns": [
            { "include": "#go-expression-inline" }
          ]
        },
        {
          "name": "meta.control.if.gsx",
          "begin": "(@if)\\s+",
          "end": "(?=\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.control.if.gsx" }
          },
          "patterns": [
            { "include": "#go-expression-inline" }
          ]
        },
        {
          "match": "@else",
          "name": "keyword.control.else.gsx"
        },
        {
          "name": "meta.control.let.gsx",
          "begin": "(@let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "end": "(?=<|\\{|$)",
          "beginCaptures": {
            "1": { "name": "keyword.control.let.gsx" },
            "2": { "name": "variable.other.gsx" },
            "3": { "name": "keyword.operator.assignment.gsx" }
          }
        },
        {
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.block.begin.gsx" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.block.end.gsx" }
          },
          "patterns": [
            { "include": "#body-contents" }
          ]
        }
      ]
    },
    "component-call": {
      "name": "meta.component-call.gsx",
      "match": "(@)([A-Z][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "punctuation.definition.component-call.gsx" },
        "2": { "name": "entity.name.function.component-call.gsx" }
      }
    },
    "element": {
      "patterns": [
        { "include": "#element-open-tag" },
        { "include": "#element-close-tag" }
      ]
    },
    "element-open-tag": {
      "name": "meta.element.open-tag.gsx",
      "begin": "(<)([a-zA-Z][a-zA-Z0-9-]*)",
      "end": "(/?>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.gsx" },
        "2": { "name": "entity.name.tag.gsx" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.end.gsx" }
      },
      "patterns": [
        { "include": "#attributes" }
      ]
    },
    "element-close-tag": {
      "name": "meta.element.close-tag.gsx",
      "match": "(</)([a-zA-Z][a-zA-Z0-9-]*)(>)",
      "captures": {
        "1": { "name": "punctuation.definition.tag.begin.gsx" },
        "2": { "name": "entity.name.tag.gsx" },
        "3": { "name": "punctuation.definition.tag.end.gsx" }
      }
    },
    "attributes": {
      "patterns": [
        {
          "comment": "Ref attribute: ref={varName}",
          "name": "meta.attribute.ref.gsx",
          "begin": "(ref)\\s*(=)\\s*(\\{)",
          "end": "(\\})",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.ref.gsx" },
            "2": { "name": "punctuation.separator.key-value.gsx" },
            "3": { "name": "punctuation.definition.expression.begin.gsx" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.expression.end.gsx" }
          },
          "patterns": [
            {
              "match": "[a-zA-Z_][a-zA-Z0-9_]*",
              "name": "variable.other.ref.gsx"
            }
          ]
        },
        {
          "comment": "Event handler attribute with expression value: onClick={handler}",
          "name": "meta.attribute.event.gsx",
          "begin": "(on(?:Click|Focus|Blur|KeyPress|Event))\\s*(=)\\s*(\\{)",
          "end": "(\\})",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.event.gsx" },
            "2": { "name": "punctuation.separator.key-value.gsx" },
            "3": { "name": "punctuation.definition.expression.begin.gsx" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.expression.end.gsx" }
          },
          "contentName": "meta.embedded.block.go",
          "patterns": [
            { "include": "#go-expression-content" }
          ]
        },
        {
          "name": "meta.attribute.gsx",
          "begin": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(\\{)",
          "end": "(\\})",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.gsx" },
            "2": { "name": "punctuation.separator.key-value.gsx" },
            "3": { "name": "punctuation.definition.expression.begin.gsx" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.expression.end.gsx" }
          },
          "contentName": "meta.embedded.block.go",
          "patterns": [
            { "include": "#go-expression-content" }
          ]
        },
        {
          "name": "meta.attribute.gsx",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.other.attribute-name.gsx" },
            "2": { "name": "punctuation.separator.key-value.gsx" },
            "3": { "name": "string.quoted.double.gsx" }
          }
        },
        {
          "name": "meta.attribute.gsx",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*([0-9]+)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.gsx" },
            "2": { "name": "punctuation.separator.key-value.gsx" },
            "3": { "name": "constant.numeric.gsx" }
          }
        }
      ]
    },
    "go-expression-block": {
      "name": "meta.expression.go.gsx",
      "begin": "(\\{)(?!\\s*$)",
      "end": "(\\})",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.expression.begin.gsx" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.expression.end.gsx" }
      },
      "contentName": "meta.embedded.block.go",
      "patterns": [
        { "include": "#go-expression-content" }
      ]
    },
    "go-expression-inline": {
      "patterns": [
        { "include": "#go-keywords" },
        { "include": "#go-constants" },
        { "include": "#go-builtin-functions" },
        { "include": "#state-declaration" },
        { "include": "#state-method-call" },
        { "include": "#go-operators" },
        { "include": "#go-function-call" },
        { "include": "#go-identifiers" },
        { "include": "#strings" },
        { "include": "#numbers" }
      ]
    },
    "go-expression-content": {
      "patterns": [
        { "include": "#go-keywords" },
        { "include": "#go-constants" },
        { "include": "#go-builtin-functions" },
        { "include": "#state-declaration" },
        { "include": "#state-method-call" },
        { "include": "#go-operators" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#go-function-call" },
        { "include": "#go-identifiers" }
      ]
    },
    "go-keywords": {
      "match": "\\b(range|nil|const|var|type|struct|interface|map|chan|func|return|if|else|for|switch|case|default|break|continue|go|defer|select|fallthrough)\\b",
      "name": "keyword.control.go.gsx"
    },
    "go-constants": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.go.gsx"
    },
    "go-builtin-functions": {
      "match": "\\b(append|cap|close|complex|copy|delete|imag|len|make|new|panic|print|println|real|recover)\\b",
      "name": "support.function.builtin.go.gsx"
    },
    "go-operators": {
      "match": "(:=|&&|\\|\\||<-|\\+\\+|--|==|!=|<=|>=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|&\\^=|&\\^|<<|>>|[+\\-*/%&|^!<>=])",
      "name": "keyword.operator.go.gsx"
    },
    "go-function-call": {
      "patterns": [
        {
          "comment": "Qualified function call: pkg.Func() - only Func is green",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)(\\.([a-zA-Z_][a-zA-Z0-9_]*))\\s*(?=\\()",
          "captures": {
            "3": { "name": "entity.name.function.go.gsx" }
          }
        },
        {
          "comment": "Unqualified function call: Func() - Func is green",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.go.gsx" }
          }
        }
      ]
    },
    "state-declaration": {
      "comment": "State variable declaration: name := tui.NewState(value)",
      "match": "(tui)(\\.)(NewState)\\s*(?=\\()",
      "captures": {
        "1": { "name": "variable.other.go.gsx" },
        "2": { "name": "punctuation.delimiter.go.gsx" },
        "3": { "name": "entity.name.function.go.gsx" }
      }
    },
    "state-method-call": {
      "comment": "State method calls: .Get(), .Set(), .Update(), .Bind(), .Batch()",
      "match": "\\.(Get|Set|Update|Bind|Batch)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.go.gsx" }
      }
    },
    "go-identifiers": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
      "name": "variable.other.go.gsx"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gsx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gsx",
              "match": "\\\\."
            },
            {
              "comment": "Go format specifiers like %s, %d, %v, %.2f, %#x, etc.",
              "name": "constant.other.placeholder.gsx",
              "match": "%[-+# 0]*(\\*|\\d+)?(\\.\\*|\\.\\d+)?[vTtbcdoqxXUeEfFgGsp%]"
            }
          ]
        },
        {
          "name": "string.quoted.single.gsx",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.gsx",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.raw.gsx",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "comment": "Go format specifiers in raw strings too",
              "name": "constant.other.placeholder.gsx",
              "match": "%[-+# 0]*(\\*|\\d+)?(\\.\\*|\\.\\d+)?[vTtbcdoqxXUeEfFgGsp%]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.gsx",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.gsx",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.gsx",
          "match": "\\b0[oO]?[0-7]+\\b"
        },
        {
          "name": "constant.numeric.binary.gsx",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.gsx",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "function-declaration": {
      "patterns": [
        {
          "comment": "Method func: func (s *Type) Name(...) { ... }",
          "name": "meta.function.method.gsx",
          "begin": "^\\s*(func)\\s+\\(([a-zA-Z_][a-zA-Z0-9_]*)\\s+(\\*?)([a-zA-Z_][a-zA-Z0-9_.]*)\\)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "end": "(?<=\\})",
          "beginCaptures": {
            "1": { "name": "keyword.function.gsx" },
            "2": { "name": "variable.parameter.receiver.gsx" },
            "3": { "name": "keyword.operator.go.gsx" },
            "4": { "name": "entity.name.type.gsx" },
            "5": { "name": "entity.name.function.gsx" }
          },
          "patterns": [
            { "include": "#parameter-list" },
            { "include": "#function-return-type" },
            { "include": "#function-body" }
          ]
        },
        {
          "comment": "Plain func: func Name(...) { ... }",
          "name": "meta.function.gsx",
          "begin": "^\\s*(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "end": "(?<=\\})",
          "beginCaptures": {
            "1": { "name": "keyword.function.gsx" },
            "2": { "name": "entity.name.function.gsx" }
          },
          "patterns": [
            { "include": "#parameter-list" },
            { "include": "#function-return-type" },
            { "include": "#function-body" }
          ]
        }
      ]
    },
    "go-declaration": {
      "patterns": [
        {
          "comment": "type struct/interface with body: type Name struct { ... }",
          "name": "meta.declaration.type.gsx",
          "begin": "^\\s*(type)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(struct|interface)\\s*(\\{)",
          "end": "(\\})",
          "beginCaptures": {
            "1": { "name": "keyword.other.type.gsx" },
            "2": { "name": "entity.name.type.gsx" },
            "3": { "name": "keyword.other.gsx" },
            "4": { "name": "punctuation.definition.block.begin.gsx" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.end.gsx" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#go-nested-block" },
            { "include": "#go-expression-content" }
          ]
        },
        {
          "comment": "type alias/definition: type Name = Type or type Name Type",
          "name": "meta.declaration.type.gsx",
          "match": "^\\s*(type)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.type.gsx" },
            "2": { "name": "entity.name.type.gsx" }
          }
        },
        {
          "comment": "const/var grouped declaration: const ( ... ) or var ( ... )",
          "name": "meta.declaration.grouped.gsx",
          "begin": "^\\s*(const|var)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "keyword.other.gsx" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#go-expression-content" }
          ]
        },
        {
          "comment": "const/var single declaration: const Name = ... or var Name Type",
          "name": "meta.declaration.gsx",
          "match": "^\\s*(const|var)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.gsx" },
            "2": { "name": "variable.other.gsx" }
          }
        }
      ]
    },
    "function-return-type": {
      "match": "\\)\\s*([\\[\\]\\*a-zA-Z0-9_.]+)\\s*(?=\\{)",
      "captures": {
        "1": { "name": "entity.name.type.gsx" }
      }
    },
    "function-body": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.block.begin.gsx" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.block.end.gsx" }
      },
      "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#go-nested-block" },
        { "include": "#go-expression-content" }
      ]
    },
    "go-nested-block": {
      "comment": "Recursive brace matching for nested Go blocks (if, for, func, etc.)",
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#go-nested-block" },
        { "include": "#go-expression-content" }
      ]
    }
  }
}
