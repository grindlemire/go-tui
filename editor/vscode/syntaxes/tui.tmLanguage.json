{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TUI",
  "scopeName": "source.tui",
  "patterns": [
    { "include": "#comments" },
    { "include": "#package-clause" },
    { "include": "#import-declaration" },
    { "include": "#component-declaration" },
    { "include": "#function-declaration" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tui",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tui",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.tui" }
          }
        }
      ]
    },
    "package-clause": {
      "name": "meta.package.tui",
      "match": "^\\s*(package)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.other.package.tui" },
        "2": { "name": "entity.name.package.tui" }
      }
    },
    "import-declaration": {
      "patterns": [
        {
          "name": "meta.import.tui",
          "begin": "^\\s*(import)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "keyword.other.import.tui" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#import-spec" }
          ]
        },
        {
          "name": "meta.import.tui",
          "match": "^\\s*(import)\\s+(\"[^\"]*\")",
          "captures": {
            "1": { "name": "keyword.other.import.tui" },
            "2": { "name": "string.quoted.double.tui" }
          }
        }
      ]
    },
    "import-spec": {
      "patterns": [
        {
          "match": "\\s*([a-zA-Z_][a-zA-Z0-9_]*)?\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.name.import.tui" },
            "2": { "name": "string.quoted.double.tui" }
          }
        }
      ]
    },
    "component-declaration": {
      "name": "meta.component.tui",
      "begin": "(@component)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\(",
      "end": "(?<=\\})",
      "beginCaptures": {
        "1": { "name": "keyword.control.component.tui" },
        "2": { "name": "entity.name.function.component.tui" }
      },
      "patterns": [
        { "include": "#parameter-list" },
        { "include": "#component-body" }
      ]
    },
    "parameter-list": {
      "begin": "(?<=\\()",
      "end": "\\)",
      "patterns": [
        { "include": "#comments" },
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s+([\\[\\]\\*a-zA-Z0-9_.]+)",
          "captures": {
            "1": { "name": "variable.parameter.tui" },
            "2": { "name": "entity.name.type.tui" }
          }
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.tui"
        }
      ]
    },
    "component-body": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.block.begin.tui" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.block.end.tui" }
      },
      "patterns": [
        { "include": "#body-contents" }
      ]
    },
    "body-contents": {
      "patterns": [
        { "include": "#comments" },
        { "include": "#go-expression-block" },
        { "include": "#control-keywords" },
        { "include": "#component-call" },
        { "include": "#element" }
      ]
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "meta.control.for.tui",
          "begin": "(@for)\\s+",
          "end": "(?=\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.control.for.tui" }
          },
          "patterns": [
            { "include": "#go-expression-inline" }
          ]
        },
        {
          "name": "meta.control.if.tui",
          "begin": "(@if)\\s+",
          "end": "(?=\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.control.if.tui" }
          },
          "patterns": [
            { "include": "#go-expression-inline" }
          ]
        },
        {
          "match": "@else",
          "name": "keyword.control.else.tui"
        },
        {
          "name": "meta.control.let.tui",
          "begin": "(@let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=",
          "end": "(?=<|\\{|$)",
          "beginCaptures": {
            "1": { "name": "keyword.control.let.tui" },
            "2": { "name": "variable.other.tui" }
          }
        },
        {
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.block.begin.tui" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.block.end.tui" }
          },
          "patterns": [
            { "include": "#body-contents" }
          ]
        }
      ]
    },
    "component-call": {
      "name": "meta.component-call.tui",
      "match": "(@)([A-Z][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "punctuation.definition.component-call.tui" },
        "2": { "name": "entity.name.function.component-call.tui" }
      }
    },
    "element": {
      "patterns": [
        { "include": "#element-open-tag" },
        { "include": "#element-close-tag" }
      ]
    },
    "element-open-tag": {
      "name": "meta.element.open-tag.tui",
      "begin": "(<)([a-zA-Z][a-zA-Z0-9-]*)",
      "end": "(/?>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.tui" },
        "2": { "name": "entity.name.tag.tui" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.end.tui" }
      },
      "patterns": [
        { "include": "#named-ref" },
        { "include": "#attributes" }
      ]
    },
    "named-ref": {
      "name": "meta.named-ref.tui",
      "match": "(#)([A-Z][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "punctuation.definition.named-ref.tui" },
        "2": { "name": "entity.name.tag.named-ref.tui" }
      }
    },
    "element-close-tag": {
      "name": "meta.element.close-tag.tui",
      "match": "(</)([a-zA-Z][a-zA-Z0-9-]*)(>)",
      "captures": {
        "1": { "name": "punctuation.definition.tag.begin.tui" },
        "2": { "name": "entity.name.tag.tui" },
        "3": { "name": "punctuation.definition.tag.end.tui" }
      }
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.tui",
          "begin": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(\\{)",
          "end": "(\\})",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.tui" },
            "2": { "name": "punctuation.separator.key-value.tui" },
            "3": { "name": "punctuation.definition.expression.begin.tui" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.expression.end.tui" }
          },
          "contentName": "meta.embedded.block.go",
          "patterns": [
            { "include": "#go-expression-content" }
          ]
        },
        {
          "name": "meta.attribute.tui",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.other.attribute-name.tui" },
            "2": { "name": "punctuation.separator.key-value.tui" },
            "3": { "name": "string.quoted.double.tui" }
          }
        },
        {
          "name": "meta.attribute.tui",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*([0-9]+)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.tui" },
            "2": { "name": "punctuation.separator.key-value.tui" },
            "3": { "name": "constant.numeric.tui" }
          }
        }
      ]
    },
    "go-expression-block": {
      "name": "meta.expression.go.tui",
      "begin": "(\\{)(?!\\s*$)",
      "end": "(\\})",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.expression.begin.tui" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.expression.end.tui" }
      },
      "contentName": "meta.embedded.block.go",
      "patterns": [
        { "include": "#go-expression-content" }
      ]
    },
    "go-expression-inline": {
      "patterns": [
        { "include": "#go-keywords" },
        { "include": "#go-constants" },
        { "include": "#go-operators" },
        { "include": "#go-identifiers" },
        { "include": "#strings" },
        { "include": "#numbers" }
      ]
    },
    "go-expression-content": {
      "patterns": [
        { "include": "#go-keywords" },
        { "include": "#go-constants" },
        { "include": "#go-builtin-functions" },
        { "include": "#go-operators" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#go-function-call" },
        { "include": "#go-identifiers" }
      ]
    },
    "go-keywords": {
      "match": "\\b(range|nil|const|var|type|struct|interface|map|chan|func|return|if|else|for|switch|case|default|break|continue|go|defer|select|fallthrough)\\b",
      "name": "keyword.control.go.tui"
    },
    "go-constants": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.go.tui"
    },
    "go-builtin-functions": {
      "match": "\\b(append|cap|close|complex|copy|delete|imag|len|make|new|panic|print|println|real|recover)\\b",
      "name": "support.function.builtin.go.tui"
    },
    "go-operators": {
      "match": "(:=|&&|\\|\\||<-|\\+\\+|--|==|!=|<=|>=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|&\\^=|&\\^|<<|>>|[+\\-*/%&|^!<>=])",
      "name": "keyword.operator.go.tui"
    },
    "go-function-call": {
      "patterns": [
        {
          "comment": "Qualified function call: pkg.Func() - only Func is green",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)(\\.([a-zA-Z_][a-zA-Z0-9_]*))\\s*(?=\\()",
          "captures": {
            "3": { "name": "entity.name.function.go.tui" }
          }
        },
        {
          "comment": "Unqualified function call: Func() - Func is green",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.go.tui" }
          }
        }
      ]
    },
    "go-identifiers": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
      "name": "variable.other.go.tui"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tui",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tui",
              "match": "\\\\."
            },
            {
              "comment": "Go format specifiers like %s, %d, %v, %.2f, %#x, etc.",
              "name": "constant.other.placeholder.tui",
              "match": "%[-+# 0]*(\\*|\\d+)?(\\.\\*|\\.\\d+)?[vTtbcdoqxXUeEfFgGsp%]"
            }
          ]
        },
        {
          "name": "string.quoted.single.tui",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tui",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.raw.tui",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "comment": "Go format specifiers in raw strings too",
              "name": "constant.other.placeholder.tui",
              "match": "%[-+# 0]*(\\*|\\d+)?(\\.\\*|\\.\\d+)?[vTtbcdoqxXUeEfFgGsp%]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tui",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.tui",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.tui",
          "match": "\\b0[oO]?[0-7]+\\b"
        },
        {
          "name": "constant.numeric.binary.tui",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.tui",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "function-declaration": {
      "name": "meta.function.tui",
      "begin": "^\\s*(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "end": "(?<=\\})",
      "beginCaptures": {
        "1": { "name": "keyword.function.tui" },
        "2": { "name": "entity.name.function.tui" }
      },
      "patterns": [
        { "include": "#parameter-list" },
        { "include": "#function-return-type" },
        { "include": "#function-body" }
      ]
    },
    "function-return-type": {
      "match": "\\)\\s*([\\[\\]\\*a-zA-Z0-9_.]+)\\s*(?=\\{)",
      "captures": {
        "1": { "name": "entity.name.type.tui" }
      }
    },
    "function-body": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.block.begin.tui" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.block.end.tui" }
      },
      "patterns": [
        { "include": "#comments" },
        { "include": "#go-expression-content" }
      ]
    }
  }
}
